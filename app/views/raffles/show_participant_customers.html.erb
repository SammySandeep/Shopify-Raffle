<section>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="products_details_left">
            <span><%= button_to "Back", raffles_path,:class => "raffle_btn", :method => :get%>
            </span>
            </div>
        </div>
        <div class="col-md-6">
          <ul class="products_details_right">
            <li>Product Title:<%= @raffle.variant.product.shopify_product_title %>  </li>
            <li>Product Variant Title:<%= @raffle.variant.title %></li>
          </ul>
        </div>
      </div>
      <hr>
      <div style="overflow: scroll;">
      <table id="example" class="table table-striped table-bordered" style="width:100%;overflow: scroll;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
        <% @participant_customers.each do |customer| %>
            <tr>
                <td><%= customer.first_name + ' ' + customer.last_name %></td>
                <td><%= customer.email_id %></td>
                <td><% @customer_address = customer.address %>
                    <% unless @customer_address.nil? %>
                       <%= simple_format(@customer_address.line1 + '<br/>' + @customer_address.line2 + '<br/>' + @customer_address.city + '&nbsp;' + @customer_address.country + '&nbsp;' + @customer_address.state  + '&nbsp;' + @customer_address.pin.to_s) %>
                    <% end %>
                </td>
            </tr>
        <% end %>
      </table>
    </div>
    </div>
</section>


<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>
</body>
</html>