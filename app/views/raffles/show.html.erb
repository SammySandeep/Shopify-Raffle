<b> Title: </b> <%= @raffle.title %> <br />
<b> Raffle Date: </b> <%= @raffle.raffle_date %> <br />
<b> winner Customer: </b> <%= @raffle.winner_customer_id %> <br />
<b> Result: </b> <%= @raffle.result %> <br />
<b> Delivery Method: </b> <%= @raffle.delivery_method %> <br />
<b> Inventory: </b> <%= @raffle.inventory %>

<h2> Participants </h2>

<table>
  <tr>
    <th> <b> Name </b> </th>
    <th> <b> Email </b> </th>
    <th> <b> Address </b> </th>
  </tr>

  <% @raffle.customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.first_name + ' ' + customer.last_name %>
      </td>
      <td>
        <%= customer.email_id %>
      </td>
      <td>
        <% @customer_address = customer.address %>
        <% unless @customer_address.nil? %>
        <%= simple_format(@customer_address.line1 + '<br/>' + @customer_address.line2 + '<br/>' + @customer_address.city + '&nbsp;' + @customer_address.country + '&nbsp;' + @customer_address.state  + '&nbsp;' + @customer_address.pin.to_s) %>
        <% end %>
      </td>
    </tr>
  <% end %>

</table>