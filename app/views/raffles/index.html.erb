<%= render "layouts/nav" %>
<!DOCTYPE html>
<html>
<style>
table.dataTable thead .sorting:after, table.dataTable thead .sorting_asc:after,
table.dataTable thead .sorting_desc:after, table.dataTable thead .sorting_asc_disabled:after,
table.dataTable thead .sorting_desc_disabled:after,
table.dataTable thead .sorting_asc:before, table.dataTable thead .sorting_desc:after,
table.dataTable thead .sorting:before, table.dataTable thead .sorting_asc:before,
table.dataTable thead .sorting_desc:before, table.dataTable thead .sorting_asc_disabled:before,
table.dataTable thead .sorting_desc_disabled:before{
    display: none;
}
</style>
<body>
<section>
    <div class="container">
    <p id="notice"><%= notice %></p>
      <table id="example" class="table table-striped table-bordered" style="width:100%;overflow: scroll;">
        <thead>
            <tr>
                <th>Product Title</th>
                <th>Variant Title</th>
                <th>Release Date</th>
                <th>Online/Offline</th>
                <th>View Results</th>
                <th>View All Entries</th>
            </tr>
        </thead>
        <tbody>
          <%@raffles.each do |raffle| %>
            <tr>
                <td><%= raffle.variant.product.shopify_product_title %></td>
                <td><%= raffle.variant.title %></td>
                <td><%= raffle.launch_date_time%></td>
                <td><%= raffle.delivery_method %></td>
                <% if raffle.variant.product.status == 'pending' %>
                  <td><%= button_to  "View Results", show_winner_and_runner_customers_path(raffle.id),:class => "raffle_btn", :method => :get, :id => "resultbtn", :disabled => true %></td>
                <% else %>
                  <td><%= button_to  "View Results", show_winner_and_runner_customers_path(raffle.id),:class => "raffle_btn_disabled", :method => :get, :id => "resultbtn", :disabled => false %></td>
                <% end %>
                <td><%= button_to  "View Entries", raffle_show_participant_customers_path(raffle.id),:class => "raffle_btn", :method => :get %> </td>

            </tr>
          <% end %>
            </tbody>
    </table>
    </div>
</section>


<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>
</body>
</html>