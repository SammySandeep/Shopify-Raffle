<p id="notice"><%= notice %></p>
<section>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <ul class="results_data_left">
            <li>Product Title:<%= @raffle.variant.product.shopify_product_title %> </li>
            <li>Variant Title :<%= @raffle.variant.title %></li>
            <li>Inventory :<%= @raffle.inventory %></li>
          </ul>
        </div>
        <div class="col-md-6">
          <div class="results_data_right">
            <%= button_to "Notify Participants", raffle_send_mail_participants_path(@raffle.id),:class => "raffle_btn", :method => :get %> 
            <%= button_to "View Entries", raffle_show_participant_customers_path(@raffle.id),:class => "raffle_btn", :method => :get %> 

          </div>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-6">
          <div class="winners_data">
            <h2>Winners</h2>
            <div style="overflow: scroll;">
            <table id="example" class="table table-striped table-bordered" style="width:100%;">
              <tbody>
                  <tr>
                      <td>Name</td>
                      <td>Email</td>
                      <td>Address</td>
                      <td>Notify</td>
                      
                  </tr>
                  <tr>
                      <td><%= @winner_customer.first_name + ' ' + @winner_customer.last_name %></td>
                      <td><%= @winner_customer.email_id %></td>
                      <td> <% @customer_address = @winner_customer.address %>
                           <% unless @customer_address.nil? %>
                              <%= simple_format(@customer_address.line1 + '<br/>' + @customer_address.line2 + '<br/>' + @customer_address.city + '&nbsp;' + @customer_address.country + '&nbsp;' + @customer_address.state  + '&nbsp;' + @customer_address.pin.to_s) %>
                            <% end %>
                      </td>
                      <% if @raffle.inventory > 0 %>
                        <td><%= button_to "Notify", raffle_send_mail_winner_path(@raffle.id),:class => "raffle_btn", :method => :get, :disabled => false %> </td>
                      <% else %>
                        <td><%= button_to "Notify", raffle_send_mail_winner_path(@raffle.id),:class => "raffle_btn", :method => :get, :disabled => true %> </td>
                      <% end %>
                    
                  </tr>
               
              </tbody>
          </table>
        </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="winners_data">
            <h2>Runner-Ups</h2>
            <div style="overflow: scroll;">
            <table id="example" class="table table-striped table-bordered" style="width:100%;">
              <tbody>
                <tr>
                    <td>Name</td>
                    <td>Email</td>
                    <td>Address</td>
                    <td>Notify</td>
                </tr>
                 <% @runner_customers.each do |customer| %>
                <tr>
                  <td><%= customer.first_name + ' ' + customer.last_name %></td>
                  <td><%= customer.email_id %></td>
                  <td> <% @customer_address = customer.address %>
                       <% unless @customer_address.nil? %>
                           <%= simple_format(@customer_address.line1 + '<br/>' + @customer_address.line2 + '<br/>' + @customer_address.city + '&nbsp;' + @customer_address.country + '&nbsp;' + @customer_address.state  + '&nbsp;' + @customer_address.pin.to_s) %>
                        <% end %>
                  </td>
                  <% if @raffle.inventory > 0 %>
                    <td><%= button_to "Notify", raffle_send_mail_runner_path(:customer_id => customer.id,:raffle_id => @raffle.id),:class => "raffle_btn", :method => :get, :disabled => false %> </td>
                  <% else %>
                    <td><%= button_to "Notify", raffle_send_mail_runner_path(:customer_id => customer.id,:raffle_id => @raffle.id),:class => "raffle_btn", :method => :get, :disabled => true %> </td>
                  <% end %> 
                
                </tr>

                <% end %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
    </div>
</section>


<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script>
</body>
</html>