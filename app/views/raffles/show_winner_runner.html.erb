<h1> Winner </h1>

<table>
  <tr>
    <th> <b> Name </b> </th>
    <th> <b> Email </b> </th>
    <th> <b> Address </b> </th>
  </tr>
  <tr>
      <td>
        <%= @winner_customer.first_name + ' ' + @winner_customer.last_name %>
      </td>
      <td>
        <%= @winner_customer.email_id %>
      </td>
      <td>
        <% @customer_address = @winner_customer.address %>
        <% unless @customer_address.nil? %>
          <%= simple_format(@customer_address.line1 + '<br/>' + @customer_address.line2 + '<br/>' + @customer_address.city + '&nbsp;' + @customer_address.country + '&nbsp;' + @customer_address.state  + '&nbsp;' + @customer_address.pin.to_s) %>
        <% end %>
      </td>
    </tr>
</table>

<h1> Runner </h1>

<table>
  <tr>
    <th> <b> Name </b> </th>
    <th> <b> Email </b> </th>
    <th> <b> Address </b> </th>
  </tr>

  <% @runner_customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.first_name + ' ' + customer.last_name %>
      </td>
      <td>
        <%= customer.email_id %>
      </td>
      <td>
        <% @customer_address = customer.address %>
        <% unless @customer_address.nil? %>
          <%= simple_format(@customer_address.line1 + '<br/>' + @customer_address.line2 + '<br/>' + @customer_address.city + '&nbsp;' + @customer_address.country + '&nbsp;' + @customer_address.state  + '&nbsp;' + @customer_address.pin.to_s) %>
        <% end %>
      </td>
    </tr>
  <% end %>

</table>